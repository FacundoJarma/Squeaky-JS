---
const { percentage = 61 } = Astro.props;
---

  <div class="percent">
    <svg>
      <circle cx="105" cy="105" r="90"></circle>
      <circle cx="105" cy="105" r="90" style={`--percent: ${percentage}`}></circle>
    </svg>
    <div class="number">
      <h3 class="font-[inter] font-bold text-5xl">{percentage} %</h3>
    </div>
  </div>


<style>

svg {
  width: 220px;
  height: 220px;
  transform: rotate(-90deg);
}


 svg circle {
  width: 100%;
  height: 100%;
  fill: none;
  stroke: #4D4D4D;
  stroke-width: 20;
  stroke-linecap: round;
}

svg circle:last-of-type {
  stroke-dasharray: 625px;
  stroke-dashoffset: calc(625px - (625px * var(--percent)) / 100);
  stroke: #3498db; 
}

.percent {
  position: relative;
  scale: 80%;
}

.number {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

svg circle:last-of-type {
  stroke: #f39c12;
}
svg circle:last-of-type {
  stroke: #FFB800;
}
</style>
