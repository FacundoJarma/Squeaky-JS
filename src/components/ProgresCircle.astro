---
const { percentage = 10 } = Astro.props;
---

<div class="percentage">
  <div class="card">
    <div class="box">
      <div class="percent">
        <svg>
          <circle cx="70" cy="70" r="70"></circle>
          <circle
            cx="70"
            cy="70"
            r="70"
            style=`stroke-dashoffset: 440 - (440 * ${percentage}) / 100>;`
          ></circle>
        </svg>
      </div>
    </div>
  </div>
</div>

<style>
  .percent {
    position: relative;
    width: 150px;
    height: 150px;
    border-radius: 50%;
    z-index: 1000;
  }

  .percent .number {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
  }

  svg {
    position: relative;
    width: 150px;
    height: 150px;
    transform: rotate(-85deg);
  }

  svg circle {
    fill: none;
    stroke: rgb(36, 47, 151);
    stroke-width: 10;
    stroke-linecap: round;
    transform: translate(5px, 5px);
  }

  svg circle:nth-child(2) {
    stroke-dasharray: 440;
    stroke: white;
  }
</style>
