---
import { Icon } from "astro-icon/components";
const { head, id } = Astro.props;
---

<article
  class={`exercise relative flex flex-col bg-[#23262f] border-2 border-[#353841] rounded-xl min-w-[216px] w-full p-4 ${head.classList}`}
>
  <!-- <div
    class="absolute -top-3 -left-3 text-xs bg-blue-800 rounded-full w-6 h-6 flex items-center justify-center text-white"
  >
    {index}
  </div> -->
  <main class="flex-1">
    <a href={"/ejercicios/" + id}>
      <h2 class="text-2xl text-white mb-2">
        {head.title}
      </h2>
    </a>
  </main>

  <footer class="flex items-center justify-between h-8">
    <span>
      <Icon name="star" height={24} width={24} />
    </span>
    <span
      class:list={["rounded-full h-8 w-8 flex items-center justify-center", {
        "bg-yellow-700": head.type === "Unica Opcion",
        "bg-blue-700": head.type === "Multiple Opcion",
        "bg-red-700": head.type === "Arrastra",
      }]}
    >
      {
        head.type === "Unica Opcion" ? (
          <Icon name="oneOption" height={30} width={30} />
        ) : head.type === "Multiple Opcion" ? (
          <Icon name="multipleOptions" height={30} width={30} />
        ) : (
          <Icon name="dragAndDrop" height={28} width={26} />
        )
      }
    </span>
  </footer>
</article>
