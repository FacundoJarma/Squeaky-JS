---
const { isCorrect, text } = Astro.props;
---

<button
  class="buttons text-start buttonOptionMultiple max-w-[17em] px-6 py-2 font-normal text-[#33353B] bg-[#D9D9D9] duration-300 hover:scale-105 rounded-[10em]"
  data-iscorrect={`${isCorrect}`}
  data-text={text}
>
  
</button>

<style>
  @keyframes showCorrect {
    50% {
      background-color: #4b5563;
    }
    100% {
      background-color: #007900;
    }
  }

  .correct {
    background-color: #007900 !important;
  }
  .incorrect {
    background-color: #ff4d4d !important;
  }

  .parcialCorrect {
    animation: showCorrect 1s;
    animation-fill-mode: forwards;
  }
</style>
