---
import Navbar from "../components/Navbar.astro";
import { ViewTransitions } from "astro:transitions";
import NavbarLoginAndRegister from "../components/NavbarLoginAndRegister.astro";
import KeyboardManager from "../components/KeyboardManager.astro";
import CheckUser from "../components/CheckUser.astro";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">

    <title>{title}</title>
  </head>
  <body class="flex flex-col min-h-screen bg-[#17181c]">
    <KeyboardManager title="Comandos de Teclado" />
    <div class="pb-[72px] h-screen">
      <!-- <ViewTransitions /> -->
      <div id="navNot" style="display:none;">
        <NavbarLoginAndRegister />
      </div>
      <div id="navYes" style="display:none;">
        <Navbar />
      </div>
      <slot />
    </div>
  </body>
</html>

<script>
  let user = localStorage.getItem("user");
  user = JSON.parse(user);
  if (!user) {
    document.getElementById("navNot").style.display = "block";
    document.getElementById("navYes").style.display = "none";
  }
  else{
    document.getElementById("navNot").style.display = "none";
    document.getElementById("navYes").style.display = "block";
  }
</script>

<style is:global>
  html {
    color-scheme: dark;
  }
</style>
