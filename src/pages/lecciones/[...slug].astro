---
import LectionsLayout from "../../layout/LectionsLayout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const lecciones = await getCollection("lecciones");
  return lecciones.map((l) => ({
    params: { slug: l.slug },
    props: { l },
  }));
}

const { l } = Astro.props;
const { Content } = await l.render();
---

<LectionsLayout title={l.data.title}>
  <Content />
</LectionsLayout>

<style is:global>
  h1 {
    color: white;
    font-weight: bold;
    font-size: 36px;
  }
  p {
    color: #b9b9b9;
  }
  code {
    padding-inline: 5px;
    padding-block: 2px;
    border-radius: 3px;
    background-color: #3d3f4e;
    color: #e5e7eb;
  }
</style>
