---
import Layout from "../layout/layout.astro";
---

<Layout title="Squeaky JS | Inicio">  
   <div>
    <div class="crearcuenta">
      <button>Crear Cuenta </button>
    </div>

   <div class="texto">
    <input type="text" placeholder="Mail/numero de telefono">
   </div>
   <div class="contraseña">
    <input type="password" placeholder="contraseña">
   </div>
   </div>



  <style>
  div {
    background-color: rgb(51, 51, 51);
    width: 30em;
    height: 30em; 
    border-radius: 1em;
    display: grid;
    align-items: flex-end;
    margin: 3em auto;
  }
  .texto  {
   
    border-radius: 1em;
    color: rgb(248, 244, 244);
    width: 10em;
    height: 3em;
    text-align: start;
  }
  .contraseña {
   
    border-radius: 1em;
    color: rgb(248, 244, 244);
    width: 10em;
    height: 3em;
    text-align: center;
    }

  .crearcuenta {
    background-color: black;
    border-radius: 1em;
    width: 10em;
    height: 3em;
    text-align: center;
  }

  
  </style>
</Layout>
