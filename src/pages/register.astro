---
import Layout from "../layout/layout.astro";
---

<Layout title="Squeaky JS | Inicio">
  <div id="pantalla">
    <div id="container">
      <h1>Crear cuenta</h1>
      <form class="input" id="registerForm">
        <div class="register">
          <input
            type="text"
            class="text"
            placeholder="Mail/Numero de Telefono"
          />
          <input
            type="password"
            class="contra"
            placeholder="Ingresa tu Contrase単a"
          />
        </div>
        <div class="todo">
          <input type="number" class="dia" placeholder="dia" min="0" max="31" />
          <input type="number" class="mes" placeholder="mes" min="o" max="12" />
          <input type="number" class="a単o" placeholder="a単o" min="0" />
        </div>
        <a href="http://localhost:4321">
          <button class="enviar" id="showInputsBtn">Enviar</button>
        </a>
      </form>
    </div>
  </div>
</Layout>

<style>
  #pantalla {
    position: absolute;
    z-index: 100;
    width: 100%;
    height: 100vh;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    border-radius: 10px;
  }
  #container {
    width: 30em;
    height: 30em;
    background-color: #23262f;
    border-radius: 3em;
    text-align: center;
    margin: 0 auto;
    gap: 1em;
  }

  h1 {
    font-size: 36px;
    padding-top: 2em;
    font-weight: bold;
    gap: 1em;
  }
  .todo {
    width: 100%;
    height: 3em;
    gap: 2em;
    display: flex;
    justify-content: center;
  }
  .todo > input {
    width: 5em;
    padding: 1em;
    margin-bottom: 4em;
  }
  .register {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2em;
    margin-bottom: 2em;
  }
  .contra {
    padding: 0.5em 1em;
    width: 16em;
    height: 2em;
    border-radius: 3em;
    background-color: rgb(75 85 99);
    color: rgb(250, 247, 247);
  }
  .text {
    padding: 0.5em 1em;
    width: 16em;
    height: 2em;
    border-radius: 3em;
    background-color: rgb(75 85 99);
    color: rgb(250, 247, 247);
  }
  .dia {
    background-color: rgb(75 85 99);
    border-radius: 1em;
  }
  .mes {
    background-color: rgb(75 85 99);
    border-radius: 1em;
  }
  .a単o {
    background-color: rgb(75 85 99);
    border-radius: 1em;
  }
  .enviar {
    background-color: rgb(30 58 138);
    width: 6em;
    height: 3em;
    border-radius: 1em;
    gap: 3em;
  }
</style>
