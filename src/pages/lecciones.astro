---
import Layout from "../layout/layout.astro";
import Lections from "../sections/Lections.astro";
import ProgresCircle from "../components/ProgresCircle.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Squeaky JS | Inicio">
  <section class="bg-[#23262f] py-12">
    <div class="max-w-6xl mx-auto">
      <div class="flex justify-between mb-12">
        <header>
          <div class="flex gap-1 items-center">
            <Icon
              name="pencil-check"
              height={40}
              width={40}
              class={"text-slate-300"}
            />
            <h1 class="text-6xl font-semibold mb-4">Tus Lecciones</h1>
          </div>

          <p class="max-w-md text-gray-300 ml-2">
            Aqui podras acceder a todas las lecciones de Squeaky JS. Considera
            este espacio como tu cuaderno de apuntes, donde podras revisar
            lecciones previas y continuar con las que te quedan por resolver.
          </p>
        </header>
        <ProgresCircle color={"#fff"} />
      </div>
      <div class="flex gap-10">
      <span class="bg-[#FFB800] text-black font-semibold px-4 py-0.5 rounded-full h-8 text-l"
        >JavaScript</span
      >
      <span class="bg-[#0066FF] text-white font-normal px-4 py-0.5 rounded-full h-8 text-l"
        >Lecciones</span
      >
      </div>
    </div>
  </section>
  <Lections />
</Layout>
