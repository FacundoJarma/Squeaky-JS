---
import Layout from "../layout/layout.astro";
import EmulatedExercises from "../sections/EmulatedExercises.astro";
import Exercices from "../sections/Exercices.astro";
import ProgressCircle from "../components/ProgresCircle.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Squeaky JS | Ejercicios">
  <section class="bg-[#23262f] py-12">
    <div class="max-w-6xl mx-auto">
      <div class="flex justify-between mb-12">
        <header>
          <div class="flex gap-1 items-center">
            <Icon
              name="pencil-check"
              height={40}
              width={40}
              class={"text-slate-300"}
            />
            <h1 class="text-6xl font-semibold mb-4 font-[inter]">
              Tus Ejercicios
            </h1>
          </div>

          <p class="max-w-md text-gray-300 ml-2 font-[urbanist]">
            Aquí podrás acceder a los ejercicios de Squeaky JS. Considera este
            espacio tu libro de actividades, donde podrás revisar, ejercitar y
            comprender lo que aprendiste durante tu camino usando esta
            aplicación.
          </p>
        </header>
        <ProgressCircle />
      </div>
      <div class="flex gap-10">
        <span
          class="bg-[#FFB800] text-black font-semibold px-4 py-0.5 rounded-full h-8 font-[lexend]"
          >JavaScript</span
        >
        <span
          class="bg-[#21903F] text-white font-normal px-4 py-0.5 rounded-full h-8 font-[lexend]"
          >Ejercicios</span
        >
      </div>
    </div>
  </section>
  <Exercices />
  <EmulatedExercises />
</Layout>
