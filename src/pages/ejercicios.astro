---
import Layout from "../layout/layout.astro";
import Lections from "../sections/Lections.astro";
import { Icon } from "astro-icon/components";
---

{
  // TOODO: Mostrar los Ejercicios y no las lecciones 
}

<Layout title="Squeaky JS | Ejercicios">
  <section class="bg-[#23262f] py-12">
    <div class="max-w-6xl mx-auto">
      <div class="flex justify-between mb-12">
        <header>
          <div class="flex gap-1 items-center">
            <Icon
              name="pencil-check"
              height={40}
              width={40}
              class={"text-slate-300"}
            />
            <h1 class="text-6xl font-semibold mb-4">Tus Ejercicios</h1>
          </div>

          <p class="max-w-md text-gray-300 ml-2">
            Aqui podras acceder a todas las lecciones de Squeaky JS. Considera
            este espacio como tu cuaderno de apuntes, donde podras revisar
            lecciones previas y continuar con las que te quedan por resolver.
          </p>
        </header>
        <div>Progress Circle</div>
      </div>
      <span class="bg-yellow-700 px-4 py-0.5 text-white rounded-full text-sm"
        >JavaScript</span
      >
    </div>
  </section>
  <Lections />
</Layout>